{
  "appId": "com.react-electron-app",
  "productName": "React Electron App",
  "mac": {
    "target": [
      "dmg",
      "zip"
    ]
  },
  "win": {
    "target": "nsis"
  },
  "linux": {
    "target": "AppImage"
  },
  "publish": [
    {
      "provider": "s3",
      "bucket": "react-electron-app-release",
      "region": "auto",
      "endpoint": "<YOUR_S3_COMPATIBLE_ENDPOINT>",
      "acl": "public-read"
    }
  ],
  "directories": {
    "output": "dist"
  },
  "files": [
    "out/**/*"
  ]
}